<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moradito">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/morado"/>


        <Button
            android:id="@+id/actualizarfoto"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/btn_cambiarfoto"
            android:drawableRight="@drawable/baseline_tag_faces_24"
            android:textColorHint="@color/moradito"

            android:backgroundTint="@color/white"






            />

        <Button
            android:id="@+id/logout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/btn_cerrarSesion"
            android:icon="@drawable/baseline_logout_24"
            android:drawableRight="@drawable/baseline_logout_24"

            android:textColorHint="@color/moradito"
            android:backgroundTint="@color/chat_bg"



            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>